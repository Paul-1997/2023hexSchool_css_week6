<header class="position-relative">
	<div class="border-bottom border-2 border-primary py-6">
		<div class="container d-flex align-items-center">
			<% if (page === 'index') { %>
			<h1 class="logo d-flex me-2 me-lg-9">
				<a href="./index.html" class="d-flex" title="7TAO活動訂票網">
					<img src="../assets/images/logo.png" alt="logo" />
				</a>
				<div class="d-none d-md-flex align-items-center ps-4">
					<span class="fs-2 me-1">7TAO</span>
					<span class="fs-6 fw-bold">活動訂票網</span>
				</div>
			</h1>
			<% } else { %>
			<h2 class="logo d-flex me-lg-9">
				<a href="./index.html" class="d-flex" title="7TAO活動訂票網">
					<img src="../assets/images/logo.png" alt="logo" />
				</a>
				<div class="d-none d-md-flex align-items-center ps-4">
					<span class="fs-2 me-1">7TAO</span>
					<span class="fs-6 fw-bold">活動訂票網</span>
				</div>
			</h2>
			<% } %>
			<div class="navbar-search d-flex border border-2 border-primary">
				<input
					type="text"
					placeholder="探索活動"
					class="noto-sans ps-3 ps-md-6 py-2 py-md-4y border-0"
				/>
				<button
					type="button"
					class="bg-primary text-secondary text-hover-info border-0 p-3 p-md-4"
				>
					<i class="icofont-search-1"></i>
				</button>
			</div>

			<nav class="ms-auto">
				<!-- MOBILE -->
				<a
					class="d-md-none border rounded border-primary px-3 py-1"
					data-bs-toggle="collapse"
					href="#header-collapse"
					role="button"
					aria-expanded="false"
					aria-controls="header-collapse"
				>
					<span class="hamburger-icon material-icons"> menu </span>
				</a>

				<!-- PC -->
				<div class="d-none d-md-flex">
					<a href="#" class="me-6 text-hover-info fs-md">
						<i class="icofont-ui-file me-1"></i>
						REGISTER</a
					>
					<a href="./login.html" class="text-hover-info fs-md">
						<i class="icofont-ui-user me-1"></i>
						LOGIN</a
					>
				</div>
			</nav>
		</div>
	</div>
	<!-- header-collapse -->
	<ul
	class="collapse py-6 px-3 border-bottom border-2 border-primary position-absolute top-100 w-100 header-collapse"
	id="header-collapse"
>
	<li class="mb-4">
		<a href="#" class="text-hover-info fs-md">
			<i class="icofont-ui-file me-1"></i>
			REGISTER</a
		>
	</li>
	<li>
		<a href="./login.html" class="text-hover-info fs-md">
			<i class="icofont-ui-user me-1"></i>
			LOGIN</a
		>
	</li>
	</ul>
</header>
